generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Income {
  id       String   @id @default(uuid())
  category String
  amount   Float
  source   String
  date     DateTime @default(now())
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id             Int            @id @default(autoincrement())
  email          String         @unique
  password       String
  stripeCustomerId String?      @unique
  recurringBills RecurringBill[] @relation("UserRecurringBills")
  incomes        Income[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  notificationPreferences NotificationPreferences?
}

model RecurringBill {
  id            Int       @id @default(autoincrement())
  name          String
  amount        Float
  billingCycle  BillingCycle
  startDate     DateTime
  dueDate       DateTime
  paymentMethod PaymentMethod
  autoPay       Boolean
  userId        Int
  user          User      @relation("UserRecurringBills", fields: [userId], references: [id])
  stripeSubscriptionId String?
  stripePaymentMethodId String?
  lastPaymentDate DateTime?
  paymentStatus PaymentStatus @default(PENDING)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model NotificationPreferences {
  id                Int      @id @default(autoincrement())
  userId            Int      @unique
  user              User     @relation(fields: [userId], references: [id])
  emailNotifications Boolean @default(true)
  pushNotifications  Boolean @default(true)
  daysBeforeDue     Int      @default(3) // Number of days before due date to send notification
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum BillingCycle {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum PaymentMethod {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
}
